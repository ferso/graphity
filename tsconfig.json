{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/api/core/*"],
      "@infra/*": ["./src/api/infrastructure/*"],
      "@application/*": ["./src/api/application/*"],
      "@presenters/*": ["./src/api/presenters/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["reflect-metadata", "jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**", "bin/**"]
}
