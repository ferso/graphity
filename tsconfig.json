{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@application/*": ["./src/application/*"],
      "@test/*": ["test/*"]
    },
    "typeRoots": ["./src/core/common/types/global.d.ts"],
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["reflect-metadata", "jest", "node"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**", "bin/**"]
}
